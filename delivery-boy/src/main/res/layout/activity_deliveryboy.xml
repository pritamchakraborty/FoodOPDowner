<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    tools:context=".Activities.Deliveryboy">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/toolbg"
                app:navigationIcon="@drawable/backarrow">

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Foodopd Owner"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

            </androidx.appcompat.widget.Toolbar>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Delivery Boy"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edit_fstname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectangleedittext"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:digits="abcdefghilmnopqrstuvwxyz"
                android:imeOptions="actionNext"
                android:paddingLeft="10dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/edit_lstname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:inputType="textPersonName"
                android:digits="abcdefghilmnopqrstuvwxyz"
                android:background="@drawable/rectangleedittext"
                android:hint="Last Name"
                android:imeOptions="actionNext"
                android:paddingLeft="10dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/edit_delvierymobile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectangleedittext"
                android:hint="Mobile Number"
                android:digits="1234567890"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:singleLine="true" />


            <EditText
                android:id="@+id/edit_pinid"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectangleedittext"
                android:hint="Enter PIN"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:paddingLeft="10dp"
                android:singleLine="true" />


            <EditText
                android:id="@+id/edit_reenterpin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectangleedittext"
                android:hint="Re-Enter PIN"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:paddingLeft="10dp"
                android:singleLine="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectangleedittext"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/deliveryboy"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"

                    android:paddingLeft="10dp"
                    android:text="Delivery Boy"
                    android:textColor="@color/black"

                    android:textSize="20dp" />

                <!--<CheckBox
                    android:id="@+id/cb1"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/yes"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    android:text="Yes"
                    android:textSize="20dp" />

                <CheckBox
                    android:id="@+id/cb2"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/no"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    android:text="No"
                    android:textSize="20dp" />-->

                <RadioGroup
                    android:id="@+id/rg_delivery_choice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp">
                    <RadioButton android:id="@+id/rb_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="yes"/>
                    <RadioButton android:id="@+id/rb_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="no"/>
                </RadioGroup>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:text="Please Check Your Orders"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:paddingLeft="10dp"
                android:text="with delivery view"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:paddingLeft="10dp"
                android:text="on this trip"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Current Orders"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/nooforders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="4"
                android:textSize="20dp" />

            <Button
                android:id="@+id/nextbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rectangleedittext"
                android:onClick="Deliveryview"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="Deliver"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/backtoowner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectangleedittext"
                android:backgroundTint="@color/lightyellow"
                android:paddingLeft="10dp"
                android:text="Back to FoodOpd Owner"
                android:textSize="15sp"
                android:gravity="center"
            />
            <EditText
                android:id="@+id/enterpin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:hint="Enter PIN"
                android:background="@drawable/rectangleedittext"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:paddingLeft="10dp"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/curenttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingLeft="10dp"
                android:textColor="#0321C8"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="100dp"
                android:text="Curent time"
                android:layout_marginBottom="20dp"
                android:textSize="35sp"
                android:gravity="center"
                />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>